    "version": "0.2.0",
    "configurations": [
        
        {
            "name": "Debug: Visualizar Gastos",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "env": {
                "DEBUG": "1"
            },
            "args": [
                "--glob", "./data/*.xlsx",
                "--config", "./config/categorias_de_gasto.json",
                "--salidas", "./salidas",
            ],
        }
    ]
}